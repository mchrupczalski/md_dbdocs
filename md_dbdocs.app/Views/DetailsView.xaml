<UserControl x:Class="md_dbdocs.app.Views.DetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:md_dbdocs.app.Views"
             xmlns:vm="clr-namespace:md_dbdocs.app.ViewModels"
             xmlns:m="clr-namespace:md_dbdocs.app.Models"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:cnv="clr-namespace:md_dbdocs.app.Converters"
             xmlns:ctrl="clr-namespace:md_dbdocs.app.Controls"
             xmlns:math="http://hexinnovation.com/math"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1200" d:Background="White">

    <UserControl.Resources>
        <cnv:BoolToImageConverter x:Key="BoolToImageConverter" FalseImage="/Resources/invalid.png" TrueImage="/Resources/valid.png" />
        <cnv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <math:MathConverter x:Key="MathConverter" />
    </UserControl.Resources>

    <Grid x:Name="displayGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MaxWidth="{Binding ElementName=displayGrid, Path=ActualWidth, Converter={StaticResource MathConverter}, ConverterParameter=x/7*2}"/>
            <ColumnDefinition Width="auto" MaxWidth="{Binding ElementName=displayGrid, Path=ActualWidth, Converter={StaticResource MathConverter}, ConverterParameter=x/7*2}"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--#region Stats and list of objects-->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderBrush="DarkGray" BorderThickness="0.5" Background="Black">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ctrl:InfoBox SetBoxLabel="Objects matched to source" SetBoxValue="{Binding MatchedToSource}" Margin="10 0" FontSize="16" Foreground="White"/>
                <ctrl:InfoBox SetBoxLabel="Objects not matched to source" SetBoxValue="{Binding NotMatchedToSource}" Margin="10 0" FontSize="16" Foreground="White"/>
                <ctrl:InfoBox SetBoxLabel="Sources not matched to object" SetBoxValue="{Binding NotMatchedToObject}" Margin="10 0" FontSize="16" Foreground="White"/>
            </StackPanel>
        </Border>

        <DataGrid x:Name="solutionObjects" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" AutoGenerateColumns="False" 
                  ItemsSource="{Binding SolutionObjects}" HorizontalScrollBarVisibility="Auto">
            <DataGrid.Resources>
                <DataTemplate x:Key="imageCol_db">
                    <Image Source="{Binding IsServer, Converter={StaticResource BoolToImageConverter}}" Width="16" Height="16" />
                </DataTemplate>

                <DataTemplate x:Key="imageCol_src">
                    <Image Source="{Binding IsProject, Converter={StaticResource BoolToImageConverter}}" Width="16" Height="16" />
                </DataTemplate>

                <DataTemplate x:Key="dbdocs_tag">
                    <Image Source="{Binding ProjectObjectModel.HasTagDbDocs, Converter={StaticResource BoolToImageConverter}}" Width="16" Height="16" />
                </DataTemplate>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTemplateColumn CellTemplate="{StaticResource ResourceKey=imageCol_db}" Header="db"/>
                <DataGridTemplateColumn CellTemplate="{StaticResource ResourceKey=imageCol_src}" Header="src"/>
                <DataGridTextColumn Header="Module" IsReadOnly="True" Binding="{Binding ProjectObjectModel.HeaderCommentModel.Module}"/>
                <DataGridTextColumn Header="Type" IsReadOnly="True" Binding="{Binding ServerObjectModel.ObjectTypeId}"/>
                <DataGridTextColumn Header="Schema" IsReadOnly="True" Binding="{Binding ServerObjectModel.SchemaName}"/>
                <DataGridTextColumn Header="Name" IsReadOnly="True" Binding="{Binding ServerObjectModel.ObjectName}"/>
                <DataGridTemplateColumn CellTemplate="{StaticResource ResourceKey=dbdocs_tag}" Header="dbdocs"/>
                <DataGridTextColumn Header="Proj File" IsReadOnly="True" Binding="{Binding ProjectObjectModel.FileInfo.FullName}"/>
            </DataGrid.Columns>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding SelectItemCommend}" 
                                           CommandParameter="{Binding Path=SelectedItem, 
                                                                      RelativeSource={RelativeSource 
                                                                      Mode=FindAncestor, AncestorType=DataGrid}}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </DataGrid>
        
        <!--#region Details of selected item-->
        <Border x:Name="leftGrid" BorderBrush="Black" BorderThickness="0.5" Grid.Row="2" Grid.Column="0" Grid.RowSpan="1" Margin="5">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Info From DataBase:" FontSize="20" Margin="5"/>

                <ctrl:InfoBox SetBoxLabel="Type Desc" SetBoxValue="{Binding SelectedItem.ServerObjectModel.ObjectTypeDesc}"/>
                <ctrl:InfoBox SetBoxLabel="Schema" SetBoxValue="{Binding SelectedItem.ServerObjectModel.SchemaName}"/>
                <ctrl:InfoBox SetBoxLabel="Name" SetBoxValue="{Binding SelectedItem.ServerObjectModel.ObjectName}"/>
                <ctrl:InfoBox SetBoxLabel="Created" SetBoxValue="{Binding SelectedItem.ServerObjectModel.ObjectCreateDate}"/>
                <ctrl:InfoBox SetBoxLabel="Modified" SetBoxValue="{Binding SelectedItem.ServerObjectModel.ObjectModDate}"/>
                <ctrl:InfoBox SetBoxLabel="Columns Count" SetBoxValue="{Binding SelectedItem.ServerObjectModel.ChildColumns.Count}"/>
                <ctrl:InfoBox SetBoxLabel="Parameters Count" SetBoxValue="{Binding SelectedItem.ServerObjectModel.ChildParameters.Count}"/>
                <ctrl:InfoBox SetBoxLabel="Object Extended Description" SetBoxValue="{Binding SelectedItem.ServerObjectModel.ExtendedDesc}"
                              SetBoxWidth="{Binding ElementName=leftGrid,Path=ActualWidth}"/>

            </StackPanel>
        </Border>

        <Border x:Name="middleGrid" BorderBrush="Black" BorderThickness="0.5" Grid.Row="2" Grid.Column="1" Grid.RowSpan="1" Margin="5">
            <Grid>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Info From Source File:" FontSize="20" Margin="5"/>

                    <ctrl:InfoBox SetBoxLabel="Type" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.CreateObjectType}"/>
                    <ctrl:InfoBox SetBoxLabel="Schema" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.CreateObjectSchema}"/>
                    <ctrl:InfoBox SetBoxLabel="Name" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.CreateObjectName}"/>
                    <ctrl:InfoBox SetBoxLabel="File Path" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.FileInfo.FullName}" 
                                  SetBoxWidth="{Binding ElementName=middleGrid,Path=ActualWidth}"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="db_docs info:" FontSize="16" Margin="5"/>

                        <StackPanel Orientation="Vertical" Margin="10 0">
                            <Image Source="{Binding SelectedItem.ProjectObjectModel.HasTagDbDocs, Converter={StaticResource BoolToImageConverter}}" Width="12" Height="12" Margin="2" VerticalAlignment="Top"/>
                            <TextBlock Text="db_docs" FontSize="9"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="10 0">
                            <Image Source="{Binding SelectedItem.ProjectObjectModel.HasTagDiagram, Converter={StaticResource BoolToImageConverter}}" Width="12" Height="12" Margin="2" VerticalAlignment="Top"/>
                            <TextBlock Text="diagram" FontSize="9"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="10 0">
                            <Image Source="{Binding SelectedItem.ProjectObjectModel.HasTagChangeLog, Converter={StaticResource BoolToImageConverter}}" Width="12" Height="12" Margin="2" VerticalAlignment="Top"/>
                            <TextBlock Text="changelog" FontSize="9"/>
                        </StackPanel>
                    </StackPanel>

                    <ctrl:InfoBox SetBoxLabel="File_Name" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.File_Name}"/>

                    <ctrl:InfoBox SetBoxLabel="Created Date" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.Created.Date}"/>
                    <ctrl:InfoBox SetBoxLabel="Created WeekDay" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.Created.WeekDay}"/>

                    <ctrl:InfoBox SetBoxLabel="Author Name" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.Author.Name}"/>
                    <ctrl:InfoBox SetBoxLabel="Author Initials" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.Author.Initials}"/>
                    <ctrl:InfoBox SetBoxLabel="Author Email" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.Author.Email}"/>

                    <ctrl:InfoBox SetBoxLabel="Modified Date" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.LastModified.Date}"/>
                    <ctrl:InfoBox SetBoxLabel="Modified WeekDay" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.LastModified.WeekDay}"/>

                    <ctrl:InfoBox SetBoxLabel="Modified By (Name)" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.ModifiedBy.Name}"/>
                    <ctrl:InfoBox SetBoxLabel="Modified By (Initials)" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.ModifiedBy.Initials}"/>
                    <ctrl:InfoBox SetBoxLabel="Modified By (Email)" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.ModifiedBy.Email}"/>

                    <ctrl:InfoBox SetBoxLabel="Module" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.Module}"/>
                    <ctrl:InfoBox SetBoxLabel="Schema" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.SchemaName}"/>
                    <ctrl:InfoBox SetBoxLabel="Name" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.ObjectName}"/>
                    <ctrl:InfoBox SetBoxLabel="Description" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.Description}"/>
                    <ctrl:InfoBox SetBoxLabel="Return Val" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.ReturnValue}"/>
                    <ctrl:InfoBox SetBoxLabel="Diagram" SetBoxValue="{Binding SelectedItem.ProjectObjectModel.HeaderModel.Diagram}"/>

                    <Button Content="Generate db_docs" Margin="10"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border BorderBrush="Black" BorderThickness="0.5" Grid.Row="2" Grid.Column="2" Margin="5">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Columns/Parameters:" FontSize="20" Margin="5"/>

                <DataGrid x:Name="objectsChildren" AutoGenerateColumns="False" 
                          ItemsSource="{Binding ObjectChildren}" HorizontalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Type" IsReadOnly="True" Binding="{Binding Type}"/>
                        <DataGridTextColumn Header="Name" IsReadOnly="True" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="DataType" IsReadOnly="True" Binding="{Binding DataType}"/>
                        <DataGridTextColumn Header="IsServer" IsReadOnly="True" Binding="{Binding IsServer}"/>
                        <DataGridTextColumn Header="ServerDesc" IsReadOnly="True" Binding="{Binding ServerDesc}"/>
                        <DataGridTextColumn Header="IsProject" IsReadOnly="True" Binding="{Binding IsProject}"/>
                        <DataGridTextColumn Header="ProjectDesc" Binding="{Binding ProjectDesc}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <!--#region Settings & navigation-->
        <Border BorderBrush="Black" BorderThickness="0.5" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="5">
            <DockPanel Height="100">
                <StackPanel>
                    <TextBlock Text="db_docs settings"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Author Name: " HorizontalAlignment="Right"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Author Initials: " HorizontalAlignment="Right"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Author Email: " HorizontalAlignment="Right"/>

                            <TextBox Grid.Row="0" Grid.Column="1" MinWidth="250"/>
                            <TextBox Grid.Row="1" Grid.Column="1" MinWidth="250"/>
                            <TextBox Grid.Row="2" Grid.Column="1" MinWidth="250"/>
                        </Grid>

                        <StackPanel Orientation="Vertical" Margin="10" Grid.Column="1">
                            <CheckBox Content="Save db_docs to source file" />
                        </StackPanel>
                    </Grid>

                    <StackPanel Orientation="Horizontal">

                        

                            

                        </StackPanel>
                    </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
    
